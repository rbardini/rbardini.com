---
import type { Post } from '../content/config'

export interface Props {
  dateFormat?: string
  post: Post
}

const { dateFormat = 'LLL d', post } = Astro.props
---

<li class="archive-item">
  <time class="date" datetime={post.data.date}>{post.dateTime.toFormat(dateFormat)}</time>
  <a href={`/${post.slug}`}>{post.data.title}</a>
</li>

<style>
  .archive-item {display: table; margin-bottom: 0.4em; table-layout: fixed}
  .archive-item time {display: table-cell; padding-right: 0.8em; text-align: right; width: 6em}
  .archive-item a {display: table-cell; text-decoration: none}
</style>
