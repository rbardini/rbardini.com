---
import Footer from '../components/Footer.astro'
import Head from '../components/Head.astro'
import Header from '../components/Header.astro'

export interface Props {
  title?: string
}

const { title } = Astro.props
---

<html lang='en'>
  <head>
    <Head {title} />
  </head>
  <body>
  <div id="content">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </div>
  </body>
</html>
