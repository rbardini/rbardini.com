{
  "name": "rbardini.com",
  "version": "1.0.0",
  "description": "Rafael Bardini's blog",
  "homepage": "https://rbardini.com",
  "main": "index.js",
  "scripts": {
    "lint": "npm run lint:md && npm run lint:js",
    "lint:md": "markdownlint src",
    "lint:js": "eslint . --ignore-path .gitignore",
    "build": "node index.js",
    "start": "npm run build -- --development",
    "deploy": "npm run build && git-directory-deploy --directory build --branch master"
  },
  "keywords": [
    "rbardini",
    "blog",
    "metalsmith"
  ],
  "author": "Rafael Bardini",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rbardini/rbardini.com.git"
  },
  "bugs": {
    "url": "https://github.com/rbardini/rbardini.com/issues"
  },
  "license": "MIT",
  "dependencies": {
    "cssnano": "4.1.10",
    "git-directory-deploy": "1.5.1",
    "jstransformer-pug": "0.3.0",
    "markdown-it-footnote": "3.0.2",
    "metalsmith": "2.3.0",
    "metalsmith-archive": "0.1.1",
    "metalsmith-assets-improved": "1.0.1",
    "metalsmith-collection-metadata": "1.0.0",
    "metalsmith-collections": "0.9.0",
    "metalsmith-html-minifier": "4.0.0",
    "metalsmith-ignore": "1.0.0",
    "metalsmith-layouts": "2.3.1",
    "metalsmith-markdownit": "0.5.0",
    "metalsmith-metallic": "2.0.3",
    "metalsmith-moment": "1.1.0",
    "metalsmith-move-up": "2.0.0",
    "metalsmith-permalinks": "2.2.0",
    "metalsmith-postcss": "4.2.0",
    "metalsmith-renamer": "0.4.1",
    "metalsmith-serve": "0.0.7",
    "metalsmith-sitemap": "1.2.2",
    "metalsmith-watch": "1.0.3",
    "postcss-color-mod-function": "3.0.3",
    "postcss-preset-env": "6.7.0",
    "pug": "2.0.4",
    "rss": "1.2.2",
    "turbolinks": "5.2.0",
    "yargs": "15.1.0"
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.19.1",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "4.2.1",
    "lint-staged": "10.0.4",
    "markdownlint-cli": "0.21.0",
    "matter-now": "1.0.0"
  }
